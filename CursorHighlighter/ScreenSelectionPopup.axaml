<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CursorHighlighter.ScreenSelectionPopup"
        Title="Select Screen"
        Width="300" Height="200">
	<StackPanel Margin="10">
		<TextBlock Text="Select a screen:" Margin="0,0,0,10"/>
		<ListBox x:Name="ScreenListBox" Height="100"/>
		<Button x:Name="SelectButton" Content="Select" HorizontalAlignment="Center" Margin="0,10,0,0"/>
	</StackPanel>
</Window>
